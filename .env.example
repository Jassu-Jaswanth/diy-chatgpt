# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
# Planner model (fast, cheap - for intent classification)
PLANNER_MODEL=gpt-4o-mini

# Main chat model
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Reasoning model (for complex research tasks)
REASONING_MODEL=gpt-4o

# Creative model (higher temperature)
CREATIVE_MODEL=gpt-4o-mini

# Code model (lower temperature for precision)
CODE_MODEL=gpt-4o-mini

# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=diy_chatgpt
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# File Storage (local path for session files)
STORAGE_PATH=./data/sessions

# Debug Options
DEBUG_ORCHESTRATOR=false

# Optional: Search API keys (for better search results)
# SERPAPI_KEY=your-serpapi-key
# BING_API_KEY=your-bing-api-key
